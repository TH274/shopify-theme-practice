{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "section-newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get an immediate 20% discount!"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Subscribe and stay up to date with our latest news and products. *Offer excludes already discounted items and Bundles"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SUBSCRIBE"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Sustainability Logo"
    },
    {
      "type": "color",
      "id": "left_background_color",
      "label": "Left Section Background Color",
      "default": "#8ebe67"
    },
    {
      "type": "color",
      "id": "right_background_color",
      "label": "Right Section Background Color",
      "default": "#8ebe67"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Color",
      "default": "#ff5d5d"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Padding bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}

<div class="newsletter-banner" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="newsletter-container">
    <div class="sustainability-section" style="background-color: {{ section.settings.left_background_color }};">
      <div class="sustainability-logo">
        {% if section.settings.logo_image != blank %}
          <img src="{{ section.settings.logo_image | img_url: 'master' }}" alt="Sustainability Promise">
        {% else %}
          <img src="{{ 'sustainability-promise.png' | asset_url }}" alt="Sustainability Promise">
        {% endif %} 
      </div>
      <div class="sustainability-text">
        <p>Bamboozld's mission is to contribute to economic growth, social progress and promote environmental sustainability.</p>
        <a href="#" class="learn-more-link">Learn more</a>
      </div>
    </div>
    
    <div class="newsletter-section" style="background-color: {{ section.settings.right_background_color }}; color: {{ section.settings.text_color }};">
      {% if section.settings.heading != blank %}
        <h2 class="newsletter-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <div class="newsletter-subheading">{{ section.settings.subheading }}</div>
      {% endif %}
      
      {%- form 'customer', id: 'newsletter-form', class: 'newsletter-form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter-field-wrapper">
          <div class="newsletter-field">
            <input
              id="NewsletterEmail"
              type="email"
              name="contact[email]"
              class="newsletter-input"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              placeholder="Email address"
              required
            >
            <button type="submit" class="newsletter-button" name="commit" style="background-color: {{ section.settings.button_color }};">
              {{ section.settings.button_text }}
            </button>
          </div>
        </div>
        
        {%- if form.errors -%}
          <div class="newsletter-error">
            {%- for error in form.errors -%}
              <small>{{ error }}</small>
            {%- endfor -%}
          </div>
        {%- endif -%}
        
        {%- if form.posted_successfully? -%}
          <div class="newsletter-success">
            <p>{{ 'general.newsletter_form.confirmation' | t }}</p>
          </div>
        {%- endif -%}
      {%- endform -%}
    </div>
  </div>
</div>

<style>
  .newsletter-banner {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    overflow: hidden;
  }
  
  .newsletter-container {
    width: 100%;
    display: flex;
    align-items: stretch;
  }
  
  .sustainability-section {
    width: 50%;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    align-items: center;
    padding: 40px;
    gap: 40px;
  }
  
  .sustainability-logo {
    max-width: 230px;
    margin-bottom: 20px;
  }
  
  .sustainability-text {
    color: white;
    font-size: 16px;
    font-weight: 600;
    line-height: 1.5;
  }
  
  .learn-more-link {
    color: white;
    text-decoration: underline;
  }
  
  .newsletter-section {
    width: 50%;
    padding: 60px 40px;
    text-align: left;
  }
  
  .newsletter-heading {
    font-size: 32px;
    font-weight: 600;
    margin: 0 0 15px;
    color: white;
  }
  
  .newsletter-subheading {
    font-size: 16px;
    line-height: 1.5;
    font-weight: 600;
    margin-bottom: 25px;
    color: white;
  }
  
  .newsletter-form {
    width: 100%;
  }
  
  .newsletter-field-wrapper {
    margin-bottom: 15px;
  }
  
  .newsletter-field {
    display: flex;
    border-radius: 0;
    overflow: hidden;
  }
  
  .newsletter-input {
    flex: 1;
    border: none;
    padding: 12px 15px;
    font-size: 16px;
    outline: none;
    color: #333;
    border-radius: 0;
  }
  
  .newsletter-input::placeholder {
    color: #999;
  }
  
  .newsletter-button {
    color: white;
    border: none;
    padding: 12px 25px;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-transform: uppercase;
    border-radius: 0;
  }
  
  .newsletter-button:hover {
    opacity: 0.9;
  }
  
  .newsletter-error {
    color: #ffffff;
    margin-top: 10px;
    font-size: 14px;
  }
  
  .newsletter-success {
    color: #ffffff;
    margin-top: 10px;
    font-size: 14px;
  }
  
  @media screen and (max-width: 768px) {
    .newsletter-container {
      flex-direction: column;
    }
    
    .sustainability-section,
    .newsletter-section {
      width: 100%;
      padding: 30px 20px;
    }
    
    .newsletter-heading {
      font-size: 24px;
    }
    
    .newsletter-field {
      flex-direction: column;
    }
    
    .newsletter-input {
      width: 100%;
      margin-bottom: 10px;
    }
    
    .newsletter-button {
      width: 100%;
    }
  }
  
  @media screen and (max-width: 480px) {
    .sustainability-section,
    .newsletter-section {
      padding: 25px 15px;
    }
    
    .sustainability-logo {
      max-width: 180px;
    }
    
    .newsletter-heading {
      font-size: 20px;
      margin-bottom: 10px;
    }
    
    .newsletter-subheading {
      font-size: 14px;
      margin-bottom: 20px;
    }
    
    .newsletter-button {
      padding: 10px 15px;
      font-size: 14px;
    }
    
    .newsletter-input {
      padding: 10px;
      font-size: 14px;
    }
  }
</style> 