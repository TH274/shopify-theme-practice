{% schema %}
{
  "name": "Featured Categories",
  "tag": "section",
  "class": "section-featured-categories",
  "settings": [

    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "default": "grid",
      "options": [
        {
          "value": "grid",
          "label": "Grid"
        },
        {
          "value": "slider",
          "label": "Slider"
        }
      ]
    },
    {
      "type": "select",
      "id": "columns_desktop",
      "label": "Number of columns",
      "options": [
        {
          "value": "2",
          "label": "2 columns"
        },
        {
          "value": "3",
          "label": "3 columns"
        },
        {
          "value": "4",
          "label": "4 columns"
        },
        {
          "value": "5",
          "label": "5 columns"
        }
      ],
      "default": "4"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Category Link"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Shop Now"
        },
        {
          "type": "select",
          "id": "button_position",
          "label": "Button Position",
          "default": "bottom-center",
          "options": [
            {
              "label": "Top Left",
              "value": "top-left"
            },
            {
              "label": "Top Center",
              "value": "top-center"
            },
            {
              "label": "Top Right",
              "value": "top-right"
            },
            {
              "label": "Center",
              "value": "center"
            },
            {
              "label": "Bottom Left",
              "value": "bottom-left"
            },
            {
              "label": "Bottom Center",
              "value": "bottom-center"
            },
            {
              "label": "Bottom Right",
              "value": "bottom-right"
            }
          ]
        },
        {
          "type": "checkbox",
          "id": "show_overlay_text",
          "label": "Show text overlay on image",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Categories",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="featured-categories-section">
  <div class="featured-categories-container">
    
    <div class="categories-wrapper {% if section.settings.layout == 'slider' %}categories-slider{% else %}categories-grid{% endif %}" 
      style="--grid-columns: {{ section.settings.columns_desktop }};">
      
      {% if section.settings.layout == 'slider' %}
        <div class="slider-nav slider-prev">
          <button class="slider-btn prev-btn" aria-label="Previous">
            {% render 'icon-arrow-left' %}
          </button>
        </div>
      {% endif %}
      
      <div class="categories-container">
        {% for block in section.blocks %}
          {% if block.type == 'category' %}
            <div class="category-item" {{ block.shopify_attributes }}>
              <div class="category-image-container">
                {% if block.settings.image %}
                  <img 
                    src="{{ block.settings.image | img_url: '500x' }}" 
                    alt="{{ block.settings.title | escape }}"
                    loading="lazy"
                    class="category-image"
                  >
                {% else %}
                  {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg category-image' }}
                {% endif %}
                
                {% if block.settings.show_overlay_text and block.settings.title != blank %}
                  <div class="category-overlay">
                    <h3 class="category-title">{{ block.settings.title }}</h3>
                  </div>
                {% endif %}
                
                {% if block.settings.link != blank and block.settings.button_label != blank %}
                  <div class="category-button-container {{ block.settings.button_position }}">
                    <a href="{{ block.settings.link }}" class="category-button">
                      {{ block.settings.button_label }}
                    </a>
                  </div>
                {% endif %}
              </div>
              
              {% if block.settings.show_overlay_text == false and block.settings.title != blank %}
                <div class="category-info">
                  <h3 class="category-title">{{ block.settings.title }}</h3>
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
      
      {% if section.settings.layout == 'slider' %}
        <div class="slider-nav slider-next">
          <button class="slider-btn next-btn" aria-label="Next">
            {% render 'icon-arrow-right' %}
          </button>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .featured-categories-section {
    padding: 30px 20px;
    margin: 0 auto;
  }
  
  .featured-categories-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .section-title {
    font-size: 32px;
    font-weight: 700;
    margin: 0 0 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #333;
  }
  
  .categories-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }
  
  .categories-container {
    display: flex;
    gap: 20px;
    width: 100%;
  }
  
  .categories-grid .categories-container {
    display: grid;
    grid-template-columns: repeat(var(--grid-columns, 4), 1fr);
  }
  
  .categories-slider .categories-container {
    overflow-x: hidden;
    scroll-behavior: smooth;
    padding: 10px 0;
  }
  
  .category-item {
    position: relative;
    flex: 0 0 calc(100% / var(--grid-columns, 4) - 20px);
    min-width: 200px;
  }
  
  .category-image-container {
    position: relative;
    overflow: hidden;
    padding-bottom: 80%; /* 4:5 aspect ratio */
  }
  
  .category-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .category-item:hover .category-image {
    transform: scale(1.05);
  }
  
  .category-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 15px;
    color: white;
    text-align: center;
  }
  
  .category-button-container {
    position: absolute;
    z-index: 2;
    padding: 1rem;
  }
  
  .category-button-container.top-left {
    top: 15px;
    left: 15px;
  }
  
  .category-button-container.top-center {
    top: 15px;
    left: 50%;
    transform: translateX(-50%);
  }
  
  .category-button-container.top-right {
    top: 15px;
    right: 15px;
  }
  
  .category-button-container.center {
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
  
  .category-button-container.bottom-left {
    bottom: 15px;
    left: 15px;
  }
  
  .category-button-container.bottom-center {
    bottom: 15px;
    left: 50%;
    transform: translateX(-50%);
  }
  
  .category-button-container.bottom-right {
    bottom: 15px;
    right: 15px;
  }
  
  .category-button {
    background-color: white;
    padding: clamp(8px, 1vw, 10px) clamp(15px, 2vw, 25px);
    color: #333;
    word-spacing: 0.1em;
    font-weight: 600;
    font-size: clamp(14px, 1.5vw, 20px);
    text-transform: capitalize;
    display: inline-block;
    transition: all 0.3s ease;
    white-space: nowrap;
    text-decoration: none;
  }
  
  .category-button:hover {
    background-color: #333;
    color: #fff;
  }
  
  .category-info {
    padding: 15px 0;
    text-align: center;
  }
  
  .category-title {
    font-size: 18px;
    font-weight: 600;
    margin: 0;
    text-transform: uppercase;
  }
  
  .slider-nav {
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }
  
  .slider-btn {
    background: transparent;
    border: none;
    padding: 10px;
    cursor: pointer;
    color: #333;
  }
  
  @media screen and (max-width: 990px) {
    .categories-grid .categories-container {
      grid-template-columns: repeat(3, 1fr);
    }
    
    .category-item {
      flex: 0 0 calc(33.333% - 20px);
    }
    
    .category-button {
      padding: 8px 20px;
      font-size: 16px;
    }
  }
  
  @media screen and (max-width: 749px) {
    .featured-categories-section {
      padding: 40px 0;
    }
    
    .section-title {
      font-size: 28px;
    }
    
    .categories-grid .categories-container {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .category-item {
      flex: 0 0 calc(50% - 20px);
    }
    
    .category-button {
      padding: 8px 15px;
      font-size: 14px;
    }
  }
</style>

{% if section.settings.layout == 'slider' %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const container = document.querySelector('.categories-container');
    const prevBtn = document.querySelector('.prev-btn');
    const nextBtn = document.querySelector('.next-btn');
    
    if (container && prevBtn && nextBtn) {
      const scrollAmount = container.clientWidth * 0.8;
      
      prevBtn.addEventListener('click', function() {
        container.scrollBy({
          left: -scrollAmount,
          behavior: 'smooth'
        });
      });
      
      nextBtn.addEventListener('click', function() {
        container.scrollBy({
          left: scrollAmount,
          behavior: 'smooth'
        });
      });
    }
  });
</script>
{% endif %} 