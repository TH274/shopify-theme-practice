{% schema %}
{
  "name": "Shop The Looks",
  "tag": "section",
  "class": "section-shop-the-looks",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SHOP THE LOOKS"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "full_width",
          "label": "Full width"
        },
        {
          "value": "fixed_width",
          "label": "Fixed width"
        }
      ],
      "default": "full_width"
    }
  ],
  "blocks": [
    {
      "type": "image_link",
      "name": "Image Link",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Link Title",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop The Looks",
      "blocks": [
        {
          "type": "image_link"
        },
        {
          "type": "image_link"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="shop-the-looks-section">
  {% if section.settings.heading != blank %}
    <div class="section-header">
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
    </div>
  {% endif %}
  
  <div class="shop-the-looks-container {% if section.settings.layout == 'fixed_width' %}fixed-width{% endif %}">
    <div class="shop-the-looks-grid">
      {% for block in section.blocks %}
        {% if block.type == 'image_link' %}
          <div class="shop-the-looks-item" {{ block.shopify_attributes }}>
            <div class="image-container">
              {% if block.settings.image %}
                <img 
                  src="{{ block.settings.image | img_url: '800x' }}" 
                  alt="{{ block.settings.title | escape }}"
                  loading="lazy"
                  class="shop-image"
                >
              {% else %}
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg shop-image' }}
              {% endif %}
              
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="shop-link">
                  <span>{{ block.settings.title | escape }}</span>
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .shop-the-looks-section {
    padding: 60px 0;
    margin: 0 auto;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 40px;
  }
  
  .section-heading {
    font-size: 32px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0;
    color: #333;
  }
  
  .shop-the-looks-container {
    width: 100%;
  }
  
  .shop-the-looks-container.fixed-width {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .shop-the-looks-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }
  
  .shop-the-looks-item {
    position: relative;
    overflow: hidden;
  }
  
  .image-container {
    position: relative;
    padding-bottom: 125%; /* 4:5 aspect ratio */
    overflow: hidden;
  }
  
  .shop-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .shop-the-looks-item:hover .shop-image {
    transform: scale(1.05);
  }
  
  .shop-link {
    position: absolute;
    bottom: 30px;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: fit-content;
    padding: 12px 25px;
    background-color: #fff;
    color: #333;
    text-transform: uppercase;
    font-weight: 600;
    font-size: 14px;
    letter-spacing: 1px;
    text-decoration: none;
    transition: background-color 0.3s ease;
    text-align: center;
  }
  
  .shop-link:hover {
    background-color: #f0f0f0;
  }
  
  @media screen and (max-width: 989px) {
    .shop-the-looks-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .section-heading {
      font-size: 28px;
    }
  }
  
  @media screen and (max-width: 749px) {
    .shop-the-looks-section {
      padding: 40px 0;
    }
    
    .shop-the-looks-grid {
      grid-template-columns: 1fr;
      gap: 15px;
    }
  }
</style> 